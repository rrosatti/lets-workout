<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rodri.letsworkout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.MainActivity" android:theme="@style/AppTheme" />

        <activity android:name=".activity.SignUpActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.UpdateCurrentMeasuresActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.RegisterNewBodyMeasureActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.NewRoutineActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.RoutineActivity" android:theme="@style/AppTheme.NoActionBar" android:screenOrientation="portrait"/>

        <activity android:name=".activity.WeightChartActivity" android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".activity.BodyMeasurementsChartActivity" android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>