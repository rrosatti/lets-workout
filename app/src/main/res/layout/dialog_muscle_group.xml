<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_margin="15dp">

    <ListView
        android:id="@+id/dialogMuscleGroup_listOfMuscleGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"/>

    <Button
        android:id="@+id/dialogMuscleGroup_btConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogMuscleGroup_listOfMuscleGroups"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:text="@string/button_confirm"/>

</RelativeLayout>