<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/background_project">

    <RelativeLayout
        android:id="@+id/fragmentHome_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fitsSystemWindows="true">

        <ImageView
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_image" />

        <TextView
            android:id="@+id/txtHomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgHome"
            android:layout_marginTop="40dp"
            android:text="@string/home_message"
            android:textSize="35sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>